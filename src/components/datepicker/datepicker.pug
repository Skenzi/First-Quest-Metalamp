include ../../ui-kit/button/button

mixin calender()
    - var weekdays = ['ПН','ВТ','СР','ЧТ','ПТ','СБ','ВС'];
    .calender-wrapper
        .calender-top
            +button()
                svg(width="17" height="18" viewBox="0 0 17 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M16.1755 8.01562V9.98438H3.98801L9.56613 15.6094L8.15988 17.0156L0.144258 9L8.15988 0.984375L9.56613 2.39062L3.98801 8.01562H16.1755Z" fill="#BC9CFF")
            .calender-top__month
            +button()
                svg(width="17" height="18" viewBox="0 0 17 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                    path(d="M8.36301 0.984375L16.3786 9L8.36301 17.0156L6.95676 15.6094L12.5349 9.98438H0.347383V8.01562H12.5349L6.95676 2.39062L8.36301 0.984375Z" fill="#BC9CFF")

        .calender-body
            .calender-body__weekdays
                each weekday in weekdays
                    .calender-body__cell= weekday
            .calender-body__days
        .calender-bottom
            +button({}, 'Очистить')
            +button({'data-calender-submit': true, 'data-calender-clear': true}, 'Применить')

mixin datepicker()
    .datepicker
        input(attrbs)
        +calender()

mixin daterange()
    .datepicker
        input(data-daterange-from type='text' readonly)
        input(data-daterange-to type='text' readonly)
        +calender()